{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post"
          style="background-color: #1d3d90;color: #f9f8ff;margin: 0 auto; width: 50%;padding: 30px 15px;border-radius: 7px;font-family: 'Arial';display: flex;flex-direction: column; margin-top: 320px">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Gelieve je aan te melden op het adminpaneel </h1>
        <div style="width: 50%;display: flex;flex-direction: column; margin: 0 auto; gap: 15px">
            <div>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus style="margin-left: 30px">

            </div>
            <div>
                <label for="inputPassword">Wachtwoord</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password"
                       required>
            </div>
            <button class="btn btn-lg btn-primary" type="submit" style="border: none;
          padding: 5px 0px;
          border-radius: 5px;
          background-color: #dd5284;
          font-size: 20px;
          font-weight: 700;
          color: #f9f8ff;">
                Sign in
            </button>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}


    </form>
{% endblock %}
